<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!--<item name="android:icon">@color/icons</item>-->
        <item name="android:divider">@color/divider</item>

    </style>
    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="ToolBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
    </style>

    <!-- 表单每个大标题的样式 -->
    <style name="tableTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <!--<item name="android:background">@color/primary_light</item>-->
    </style>
    <style name="tableTitle2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <!-- 表单左侧的名称的样式 -->
    <style name="tableColName">
        <item name="android:layout_width">100dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 表单右侧输入文本的样式 -->
    <style name="tableColInput">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!-- 存放图片的布局 -->
    <style name="tableColImageLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!-- 添加图片的按钮样式+ -->
    <style name="tableColImagAdd">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@mipmap/ic_add_white_24dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">50dp</item>
    </style>
</resources>
