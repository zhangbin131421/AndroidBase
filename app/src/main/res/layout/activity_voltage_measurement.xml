<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 交叉跨越测量 -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/tableTitle">
            <TextView style="@style/tableColName"
                android:text="任务派发"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etAssignmentTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="任务编号"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etTaskNum"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="台区名称"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etAreaName"
                style="@style/spinner"/>
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="配变容量（KVA）4"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etConfigA"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="配变型号"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etConfigB"
                style="@style/spinner"/>
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="配变类别"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etConfigC"
                style="@style/spinner"/>
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="额定电流（A）"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etRatedCurrent"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="动力户数"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etPowerHouseholder"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="动力容量"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etPowerCapacity"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="居民户数"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etHouseholder"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="居民容量"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etHouseholderCapacity"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="安全措施"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etSafetyMeasure"
                style="@style/spinner"/>
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="结束时间"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etEndTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle">
            <TextView style="@style/tableColName"
                android:text="测量情况"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etBeginHandleTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="时段"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etPeriod"
                style="@style/spinner"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="A相电流（A）1"/>
            <TextView style="@style/formDivider"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etCurrentA_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageCurrentA"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="B相电流（A）2"/>
            <TextView style="@style/formDivider"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etCurrentB_content"
                style="@style/tableColImageLayout">
                <ImageView android:layout_margin="5dp"
                android:id="@+id/btn_add_imageCurrentB"
                style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="C相电流（A）3"/>
            <TextView style="@style/formDivider"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etCurrentC_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageCurrentC"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="零线电流（A）"/>
            <TextView style="@style/formDivider"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etZeoLineCurrent_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageZeoLineCurrent"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="负载率（%）"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etLoadRate"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="三相不平衡率（%）"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etImbalanceRate"/>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="线路首端电压（V）"/>
            <TextView style="@style/formDivider"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etHeaderVoltage_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageHeaderVoltage"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="线路末端电压（V）"/>
            <TextView style="@style/formDivider"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etFooterVoltage_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageFooterVoltage"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="是否越限"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etIsOutOfLimit"
                style="@style/spinner"/>
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="整改建议"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etModificationOpinion"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="测量日期"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etTestTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="测量人员"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
            android:id="@+id/etTester"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle">
            <TextView style="@style/tableColName"
                android:text="任务结束"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etEndHandleTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="已处理"/>
            <TextView style="@style/formDivider"/>
            <Spinner
                android:id="@+id/etIsHandled"
                style="@style/spinner"/>
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="未处理"/>
            <TextView style="@style/formDivider"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etUnhandleReason"/>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>