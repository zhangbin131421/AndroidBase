<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 交叉跨越测量 -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/tableTitle">
            <TextView style="@style/tableColName"
                android:text="任务派发"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etAssignmentTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="任务编号"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etTaskNum"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="台区名称"/>
            <Spinner
                android:id="@+id/etAreaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="交跨点"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etCrossPoint"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="跨越物名称"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
            android:id="@+id/etCrossName"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="安全措施"/>
            <Spinner
                android:id="@+id/etSafetyMeasure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout style="@style/tableTitle">
            <TextView style="@style/tableColName"
                android:text="测量情况"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etBeginHandleTime"/>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="对地距离（米）"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etEarthDistance_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageEarthDistance"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>


        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="交跨距离（米）"/>
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/etCrossDistance_content"
                style="@style/tableColImageLayout">
                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/btn_add_imageCrossDistance"
                    style="@style/tableColImagAdd"/>
            </org.apmem.tools.layouts.FlowLayout>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="是否符合要求"/>
            <Spinner
                android:id="@+id/etIsQualified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="整改意见"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etModificationOpinion"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
            android:text="测量时间"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etTestTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="测量人员"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etTester"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle">
            <TextView style="@style/tableColName"
                android:text="任务结束"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
            android:id="@+id/etEndHandleTime"/>
        </LinearLayout>

        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="已处理"/>
            <Spinner
                android:id="@+id/etIsHandled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout style="@style/tableTitle2">
            <TextView style="@style/tableColName"
                android:text="未处理"/>
            <com.andreabaccega.widget.FormEditText
                style="@style/tableColInput"
                whatever:emptyErrorString="@string/notEmpty"
                android:id="@+id/etUnhandleReason"/>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
